{
    "input_model":{
        "type": "PyTorchModel",
        "config": {
            "model_script": "user_script.py",
            "io_config": {
                "input_names": ["input_ids", "attention_mask", "position_ids"],
                "output_names": ["logits"],
                "input_shapes": [[2,8], [2,40], [2,8]],
                "input_types": ["int32", "int32", "int32"],
                "dynamic_axes": {
                    "input_ids": {"0": "batch_size", "1": "sequence_length"},
                    "attention_mask": {"0": "batch_size", "1": "total_sequence_length"},
                    "position_ids": {"0": "batch_size", "1": "sequence_length"}
                },
                "kv_cache": true
            },
            "hf_config": {
                "model_name": "openlm-research/open_llama_3b",
                "model_class": "LlamaForCausalLM",
                "from_pretrained_args": {
                    "_attn_implementation": "eager"
                },
                "task": "text-generation"
            }
        }
    },
    "evaluators": {
        "merged_evaluator": {
            "metrics": [
                {
                    "name": "latency_prompt_processing",
                    "type": "latency",
                    "sub_types": [
                        {
                            "name": "avg",
                            "priority": 1
                        }
                    ],
                    "user_config": {
                        "user_script": "user_script.py",
                        "dataloader_func": "dataloader_func_for_merged",
                        "func_kwargs": {
                            "dataloader_func": {
                                "model_id": "openlm-research/open_llama_3b",
                                "past_seq_length": 0,
                                "seq_length": 8,
                                "max_seq_length": 2048
                            }
                        },
                        "batch_size": 2,
                        "io_bind": true
                    }
                },
                {
                    "name": "latency_token_generation",
                    "type": "latency",
                    "sub_types": [
                        {
                            "name": "avg"
                        }
                    ],
                    "user_config": {
                        "user_script": "user_script.py",
                        "dataloader_func": "dataloader_func_for_merged",
                        "func_kwargs": {
                            "dataloader_func": {
                                "model_id": "openlm-research/open_llama_3b",
                                "past_seq_length": 8,
                                "seq_length": 1,
                                "max_seq_length": 2048
                            }
                        },
                        "batch_size": 2,
                        "io_bind": true
                    }
                }
            ]
        }
    },
    "passes": {
        "conversion": {
            "type": "OnnxConversion",
            "config": {
                "target_opset": 17,
                "save_as_external_data": true,
                "all_tensors_to_one_file": true,
                "torch_dtype": "float32"
            }
        },
        "auto_fusion": {
            "type": "AutoFusion",
            "config" : {
                "rseed" : 45
            }
        }
    },
    "engine": {
        "search_strategy": false,
        "evaluator": "merged_evaluator",
        "cache_dir": "cache",
        "output_dir" : "models/auto_fusion"
    }
}
