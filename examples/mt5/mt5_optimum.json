{
    "input_model":{
        "type": "OptimumModel",
        "config": {
            "model_path": "google/mt5-base",
            "model_components": ["decoder_model.onnx", "decoder_with_past_model.onnx", "encoder_model.onnx"],
            "hf_config": {
                "model_class": "MT5ForConditionalGeneration"
            }
        }
    },
    "passes": {
        "convert": {
            "type": "OptimumConversion",
            "config": {
                "target_opset": 17,
                "fp16": true,
                "save_as_external_data": true,
                "all_tensors_to_one_file": true
            }
        },
        "optimize": {
            "type": "OrtTransformersOptimization",
            "config": {
                "model_type": "t5",
                "only_onnxruntime": true,
                "use_gpu": true,
                "save_as_external_data": true,
                "all_tensors_to_one_file": true
            }
        },
        "merge": {
            "type": "OptimumMerging",
            "config": {
                "strict": false,
                "save_as_external_data": true,
                "all_tensors_to_one_file": true
            }
        }
    },
    "engine": {
        "cache_dir": "cache",
        "output_name": "mt5-base",
        "execution_providers": ["CUDAExecutionProvider"],
        "output_dir": "models/mt5_optimum",
        "packaging_config": {
            "output_model_format": "optimum_onnx"
        }
    }
}
